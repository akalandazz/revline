# =================================
# Django Core Configuration
# =================================

# SECURITY WARNING: keep the secret key used in production secret!
# Generate a new secret key for production: https://djecrety.ir/
SECRET_KEY=django-insecure-change-me-in-production-replace-with-real-secret-key

# SECURITY WARNING: don't run with debug turned on in production!
DEBUG=1

# Comma-separated list of hosts/domain names that this Django site can serve
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,yourdomain.com

# =================================
# Database Configuration
# =================================

# PostgreSQL Database Settings
DB_NAME=revline_db
DB_USER=revline_user
DB_PASSWORD=revline_pass
DB_HOST=db
DB_PORT=5432

# Alternative: Database URL (uncomment if using DATABASE_URL instead of individual settings)
# DATABASE_URL=postgresql://revline_user:revline_pass@db:5432/revline_db

# =================================
# Cache & Session Configuration
# =================================

# Redis Cache and Session Storage
REDIS_URL=redis://redis:6379/1

# =================================
# Email Configuration
# =================================

# Email Backend (console for development, smtp for production)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Configuration (uncomment for production)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=1
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-email-app-password
# DEFAULT_FROM_EMAIL=RevLine <noreply@yourdomain.com>

# =================================
# AWS S3 Storage (Production)
# =================================

# AWS Credentials for S3 file storage
# AWS_ACCESS_KEY_ID=your-aws-access-key-id
# AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
# AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
# AWS_S3_REGION_NAME=us-east-1
# AWS_S3_CUSTOM_DOMAIN=your-cloudfront-domain.com

# S3 Configuration
# AWS_S3_OBJECT_PARAMETERS={'CacheControl': 'max-age=86400'}
# AWS_DEFAULT_ACL=None
# AWS_S3_FILE_OVERWRITE=False

# =================================
# Payment Processing (Stripe)
# =================================

# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
# STRIPE_SECRET_KEY=sk_test_your_secret_key_here

# Stripe Webhook Endpoint Secret (for webhook verification)
# STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# =================================
# Security Settings (Production)
# =================================

# SSL/HTTPS Settings (uncomment for production with SSL)
# SECURE_SSL_REDIRECT=1
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=1
# SECURE_HSTS_PRELOAD=1
# SECURE_CONTENT_TYPE_NOSNIFF=1
# SECURE_BROWSER_XSS_FILTER=1
# SECURE_PROXY_SSL_HEADER=('HTTP_X_FORWARDED_PROTO', 'https')

# =================================
# Logging Configuration
# =================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =================================
# Celery Configuration (if using background tasks)
# =================================

# Celery Broker (usually same as Redis)
# CELERY_BROKER_URL=redis://redis:6379/0
# CELERY_RESULT_BACKEND=redis://redis:6379/0

# =================================
# Third-party Service APIs
# =================================

# Google Analytics (optional)
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn-here@sentry.io/project-id

# =================================
# Development Settings
# =================================

# Django Extensions (for development)
# DJANGO_EXTENSIONS=1

# Development Database (SQLite alternative for local development)
# USE_SQLITE=0

# =================================
# Internationalization
# =================================

# Default Language Code
LANGUAGE_CODE=en

# Time Zone
TIME_ZONE=UTC

# =================================
# File Upload Settings
# =================================

# Maximum file upload size (in bytes)
# FILE_UPLOAD_MAX_MEMORY_SIZE=2621440  # 2.5 MB
# DATA_UPLOAD_MAX_MEMORY_SIZE=2621440  # 2.5 MB

# =================================
# Custom Application Settings
# =================================

# Site Name and Branding
SITE_NAME=RevLine
ADMIN_SITE_HEADER=RevLine Administration

# Pagination
PAGE_SIZE=20

# Cart Session Timeout (in seconds)
# CART_SESSION_TIMEOUT=3600

# =================================
# Notes and Instructions
# =================================

# 1. Copy this file to .env and update the values
# 2. Never commit .env files to version control
# 3. Use strong, unique values for SECRET_KEY and passwords
# 4. Set DEBUG=0 for production environments
# 5. Configure proper ALLOWED_HOSTS for production
# 6. Set up proper email configuration for production
# 7. Configure AWS S3 for production file storage
# 8. Set up Stripe keys for payment processing
# 9. Enable SSL settings for production HTTPS
# 10. Use environment-specific Redis and Database URLs for production